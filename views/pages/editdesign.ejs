    <script src="js/editor-textcolor/white-textcolor.js"></script>


    <% } else  { %>
    <script src="js/editor-textcolor/black-textcolor.js"></script>

    <% } %>



    <% if(queries.shirtColor == "blackshirt") { %>
    <script src="js/editor-shirtcolor/black-shirtcolor.js"></script>


    <% } else if (queries.shirtColor == "grayshirt") { %>
    ies.shirtColor == "greenshirt") { %>
    <script src="js/editor-shirtcolor/gray-shirtcolor.js"></script>

    <% } else if (queries.shirtColor == "greenshirt") { %>
        <script src="js/editor-shirtcolor/green-shirtcolor.js"></script>

    <% } else if (queries.shirtColor == "purpleshirt") { %>
    <script src="js/editor-shirtcolor/purple-shirtcolor.js"></script>

    <% } else if (queries.shirtColor == "orangeshirt") { %>
    <script src="js/editor-shirtcolor/orange-shirtcolor.js"></script>

    <% } else if (queries.shirtColor == "pinkshirt") { %>
    <script src="js/editor-shirtcolor/pink-shirtcolor.js"></script>

    <% } else if (queries.shirtColor == "yellowshirt") { %>
       <script src="js/editor-shirtcolor/yellow-shirtcolor.js"></script>
    <% } else if (queries.shirtColor == "redshirt") { %>
        <script src="js/editor-shirtcolor/red-shirtcolor.js"></script>
    <% } else if (queries.shirtColor == "blueshirt") { %>
        <script src="js/editor-shirtcolor/blue-shirtcolor.js"></script>


    <% } else  { %>

    
    <script src="js/editor-shirtcolor/white-shirtcolor.js"></script>
    <% } %>
</body>


</html>